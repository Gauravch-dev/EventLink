<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="#FFFFFF"
    tools:openDrawer="start">

    <!-- CONTENT CONTAINER (normal view, NOT a drawer) -->
    <FrameLayout
        android:id="@+id/content_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- MAIN SCROLL AREA -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/rootScroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Toolbar -->
                <include
                    layout="@layout/toolbar"
                    android:id="@+id/mainToolbar"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Page Title -->
                <TextView
                    android:id="@+id/textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For You"
                    android:textColor="#000000"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/mainToolbar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Image Slider Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSlider"
                    android:layout_width="0dp"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#E0E0E0"
                    app:cardBackgroundColor="#FAFAFA"
                    app:layout_constraintTop_toBottomOf="@id/textTitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.denzcoskun.imageslider.ImageSlider
                        android:id="@+id/imageSlider"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:iss_auto_cycle="true"
                        app:iss_corner_radius="16"
                        app:iss_delay="1500"
                        app:iss_period="1500" />
                </com.google.android.material.card.MaterialCardView>

                <!-- Update Interests Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnUpdateInterests"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Update Interests"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="#8B5CF6"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/cardSlider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Dynamic Events List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerNearbyEvents"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintTop_toBottomOf="@id/btnUpdateInterests"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Spacer so last card clears the fixed buttons -->
                <Space
                    android:id="@+id/bottomSpacer"
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toBottomOf="@id/recyclerNearbyEvents"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- FIXED BUTTONS OVER CONTENT (not drawers) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/openChatBtn"
            android:layout_width="wrap_content"
            android:layout_height="52dp"
            android:text="Open Chat"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#8B5CF6"
            app:cornerRadius="12dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="20dp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_create_event"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add"
            app:tint="@android:color/white"
            app:backgroundTint="#8B5CF6"
            android:contentDescription="Create Event"
            app:fabSize="normal"
            android:onClick="onCreateEventClick"
            android:layout_gravity="bottom|end"
            android:layout_margin="24dp" />

    </FrameLayout>

    <!-- LEFT DRAWER ONLY -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
