<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose Your Interests"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Select topics you're interested in to personalize your experience"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- ✅ 2-column grid using Flow -->
        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/interestsFlow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:flow_wrapMode="aligned"
            app:flow_horizontalGap="16dp"
            app:flow_verticalGap="16dp"
            app:flow_maxElementsWrap="2"
            app:constraint_referenced_ids="cardOne,cardTwo,cardThree,cardFour,cardFive,cardSix"
            app:layout_constraintTop_toBottomOf="@id/textSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp" />

        <!-- ✅ ROW 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="16dp">

            <CheckBox
                android:id="@+id/checkBoxOne"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AI/ML"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:button="@null" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="16dp">

            <CheckBox
                android:id="@+id/checkBoxTwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cybersecurity"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:button="@null" />
        </com.google.android.material.card.MaterialCardView>

        <!-- ✅ ROW 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardThree"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="16dp">

            <CheckBox
                android:id="@+id/checkBoxThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Web/App Dev"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:button="@null" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFour"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="16dp">

            <CheckBox
                android:id="@+id/checkBoxFour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="IoT/Hardware"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:button="@null" />
        </com.google.android.material.card.MaterialCardView>

        <!-- ✅ ROW 3 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardFive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="16dp">

            <CheckBox
                android:id="@+id/checkBoxFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Blockchain"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:button="@null" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSix"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            app:strokeWidth="2dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:cardCornerRadius="16dp">

            <CheckBox
                android:id="@+id/checkBoxSix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cloud/DevOps"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20dp"
                android:button="@null" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Continue -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="40dp"
            android:text="Continue"
            android:textColor="#FFFFFF"
            app:backgroundTint="#8B5CF6"
            app:cornerRadius="12dp"
            android:onClick="onForyouClick"
            app:layout_constraintTop_toBottomOf="@id/interestsFlow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
