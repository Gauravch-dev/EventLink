<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- Title Section -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textSize="32sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:letterSpacing="0.01"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="60dp" />

        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share your event with others"
            android:textSize="16sp"
            android:textColor="#666666"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" />

        <!-- Event Name Input -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:layout_constraintTop_toBottomOf="@id/textSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="48dp">

            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Event name"
                android:inputType="text"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="18dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Event Description Input -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:layout_constraintTop_toBottomOf="@id/cardEventName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <EditText
                android:id="@+id/eventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="textMultiLine"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="18dp"
                android:minHeight="120dp"
                android:gravity="top"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Domain Dropdown -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDomain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:layout_constraintTop_toBottomOf="@id/cardEventDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <AutoCompleteTextView
                android:id="@+id/domainDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select domain"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="18dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Search Location -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSearchLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:layout_constraintTop_toBottomOf="@id/cardDomain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <AutoCompleteTextView
                android:id="@+id/searchLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Search location"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="18dp"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Location Buttons -->
        <LinearLayout
            android:id="@+id/locationButtonsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/cardSearchLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearchLocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Search"
                android:textColor="#8B5CF6"
                android:textStyle="bold"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="#8B5CF6"
                app:backgroundTint="#FFFFFF"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCurrentLocation"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Use Current"
                android:textColor="#8B5CF6"
                android:textStyle="bold"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                app:strokeWidth="1dp"
                app:strokeColor="#8B5CF6"
                app:backgroundTint="#FFFFFF"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Selected Location Text -->
        <TextView
            android:id="@+id/selectedLocationText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="No location selected"
            android:textColor="#999999"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/locationButtonsLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Map Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardMap"
            android:layout_width="0dp"
            android:layout_height="300dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/selectedLocationText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Event Date Picker -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:layout_constraintTop_toBottomOf="@id/cardMap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select event date"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="18dp"
                android:focusable="false"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Event Time Picker -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventTime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            app:layout_constraintTop_toBottomOf="@id/cardEventDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editEventTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select event time"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="18dp"
                android:focusable="false"
                android:clickable="true"
                android:background="@android:color/transparent"
                android:fontFamily="sans-serif" />
        </com.google.android.material.card.MaterialCardView>

        <!-- POST Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPost"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="POST EVENT"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:cornerRadius="12dp"
            app:backgroundTint="#8B5CF6"
            app:layout_constraintTop_toBottomOf="@id/cardEventTime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>