<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="32dp">

        <!-- PAGE TITLE -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Event"
            android:textColor="#000000"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/textSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fill in the details below"
            android:textColor="#666666"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/textTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- NAME LABEL -->
        <TextView
            android:id="@+id/labelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@id/textSubtitle"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- NAME INPUT -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/eventName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter event name"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@android:color/transparent" />
        </com.google.android.material.card.MaterialCardView>

        <!-- DESCRIPTION LABEL -->
        <TextView
            android:id="@+id/labelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardEventName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- DESCRIPTION INPUT -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardEventDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDescription"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <EditText
                android:id="@+id/eventDescription"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="top"
                android:hint="Enter event description"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:textSize="16sp"
                android:padding="16dp"
                android:background="@android:color/transparent" />
        </com.google.android.material.card.MaterialCardView>

        <!-- âœ… NEW: DOMAIN LABEL -->
        <TextView
            android:id="@+id/labelDomain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Domain"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardEventDescription"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- âœ… NEW: DOMAIN DROPDOWN -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardDomain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelDomain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/domainDropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select domain"
                android:textColor="#000000"
                android:textColorHint="#999999"
                android:padding="16dp"
                android:textSize="16sp"
                android:background="@android:color/transparent" />
        </com.google.android.material.card.MaterialCardView>

        <!-- LOCATION LABEL -->
        <TextView
            android:id="@+id/labelLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/cardDomain"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- LOCATION SEARCH + BUTTON -->
        <LinearLayout
            android:id="@+id/locationSearchBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/labelLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="#E0E0E0"
                app:cardBackgroundColor="#FAFAFA">

                <AutoCompleteTextView
                    android:id="@+id/searchLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Search or enter location"
                    android:textColor="#000000"
                    android:textColorHint="#999999"
                    android:padding="16dp"
                    android:textSize="16sp"
                    android:background="@android:color/transparent" />
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSearchLocation"
                android:layout_width="wrap_content"
                android:layout_height="52dp"
                android:layout_marginStart="12dp"
                android:text="Search"
                android:textColor="@android:color/white"
                app:cornerRadius="12dp"
                app:backgroundTint="#8B5CF6" />
        </LinearLayout>

        <!-- CURRENT LOCATION BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCurrentLocation"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:text="ðŸ“ Use Current Location"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            app:cornerRadius="12dp"
            app:backgroundTint="#8B5CF6"
            app:layout_constraintTop_toBottomOf="@id/locationSearchBox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- MAP -->
        <FrameLayout
            android:id="@+id/mapContainer"
            android:layout_width="0dp"
            android:layout_height="300dp"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/btnCurrentLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>

        <!-- SELECTED LOCATION -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardSelectedLocation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#E0E0E0"
            app:cardBackgroundColor="#FAFAFA"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/mapContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/selectedLocationText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No location selected"
                android:textColor="#666666"
                android:textSize="14sp"
                android:padding="16dp" />
        </com.google.android.material.card.MaterialCardView>

        <!-- POST BUTTON -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPost"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="POST EVENT"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="32dp"
            app:cornerRadius="12dp"
            app:backgroundTint="#8B5CF6"
            app:layout_constraintTop_toBottomOf="@id/cardSelectedLocation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
